{
  "verbose": true,
  "projects": [
    {
      "displayName": "backend",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/**/*.test.js"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
      ]
    },
    {
      "displayName": "frontend",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/src/**/*.test.js"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
      ],
      "moduleNameMapper": {
        "\\.(css|less|svg)$": "<rootDir>/__mocks__/styleMock.js"
      }
    }
  ],
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/tests/**",
    "!vite.config.js"
  ]
}