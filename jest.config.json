{
  "verbose": true,
  "projects": [
    {
      "displayName": "backend",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/**/*-test.ts"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
      ],
      "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
      }
    },
    {
      "displayName": "frontend",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/src/**/*.test.js"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
      ],
      "moduleNameMapper": {
        "\\.(css|less|svg)$": "<rootDir>/__mocks__/styleMock.js"
      }
    }
  ],
  "collectCoverageFrom": [
    "**/*.{ts,jsx}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/tests/**",
    "!vite.config.js",
    "!built_backend/**"
  ]
}