    "backend:test": "NODE_ENV=test nodemon index.js",
    "lint": "eslint . --ext js,jsx",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "test:back": "NODE_ENV=test jest --runInBand --selectProjects backend",
    "test:front": "NODE_ENV=test jest --runInBand --selectProjects frontend",
    "tests": "NODE_ENV=test jest --runInBand --coverage",
