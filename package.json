{
  "name": "react-crawler",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20.3.1 <21.0.0"
  },
  "scripts": {
    "vite:dev": "vite",
    "build": "vite build",
    "vite:preview": "vite preview",
    "backend:start": "node index.js",
    "backend:dev": "NODE_ENV=development nodemon index.js",
    "lint": "eslint . --ext js,jsx",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "backend:testESM": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --verbose --runInBand",
    "backend:test": "NODE_ENV=test jest --verbose --runInBand",
    "deploy": "fly deploy --ha=false",
    "deploy:full": "npm run build && npm run deploy"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.52.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "vite": "^4.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
